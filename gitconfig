[user]
	name = Jean-Francois Cantin
	email = jfcantin@gmail.com

[push]
	default = matching

[alias]
	s = status -s
	ca = !git add -A && git commit -av
	cam = !git add -A && git commit -avm
	go = checkout -B
	branches = branch -a -v
	remotes = remote -v
	tags = tag -l
	unstage = reset HEAD --
	uncommit = reset --soft HEAD^
	# Show the diff between the latest commit and the current state
	d = !"git diff-index --quiet HEAD -- || clear; git --no-pager diff --patch-with-stat"
	l = log --pretty=oneline -n 20 --graph --abbrev-commit
	plog = log --graph --pretty=format:'%Cred%h%Creset █ %Cblue[%an]%Creset █ %Cred(%cr)%Creset █ %s █ %Cgreen%d%Creset'
	lol  = log --graph --decorate --pretty=oneline --abbrev-commit
	lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
	pl = "!git plog -25 | column -s'█' -t 2>/dev/null | less -r"

[apply]
	# Detect whitespace errors when applying a patch
	whitespace = fix

[core]
	# Use custom `.gitignore` and `.gitattributes`
	excludesfile = ~/.gitignore
	attributesfile = ~/.gitattributes
	whitespace = space-before-tab,indent-with-non-tab,trailing-space

[color]
	# Use colors in Git commands that are capable of colored output when
	# outputting to the terminal. (This is the default setting in Git ≥ 1.8.4.)
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[merge]
	# Include summaries of merged commits in newly created merge commit messages
	log = true

# URL shorthands
[url "ssh://git@github.com/"]
	insteadOf = https://github.com/

[url "ssh://git@gitlab.com/"]
	insteadOf = https://gitlab.com/

[url "ssh://git@bitbucket.org/"]
	insteadOf = https://bitbucket.org/

[credential]
	helper = osxkeychain
